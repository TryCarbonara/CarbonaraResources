apiVersion: v1
kind: ServiceAccount
metadata:
  name: carbonara-agent
  namespace: carbonara-monitoring
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: carbonara-agent
  namespace: carbonara-monitoring
rules:
- apiGroups: [""]
  #
  # at the HTTP level, the name of the resource for accessing nodes
  # objects is "secrets"
  resources: ["nodes"]
  verbs: ["get", "watch", "list"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: carbonara-agent
subjects:
- kind: ServiceAccount
  name: carbonara-agent
  namespace: carbonara-monitoring
roleRef:
  kind: ClusterRole
  name: carbonara-agent
  apiGroup: rbac.authorization.k8s.io
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    component: agent
    tier: control-plane
  name: carbonara-agent
  namespace: carbonara-monitoring
spec:
  selector:
    matchLabels:
      component: agent
  replicas: 1
  template:
    metadata:
      labels:
        component: agent
        version: 0.0.1
    spec:
      serviceAccountName: carbonara-agent
      containers:
      - image: saurabsa/carbonara-agent:v0.0.1
        name: carbonara-agent
        imagePullPolicy: Always
        envFrom:
          - configMapRef:
              name: carbonara-agent-config
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: carbonara-agent-config
  labels:
    app: agent
data:
  CLOUDPROVIDER: AWS
  PROMENDPOINT: prometheus-kube-prometheus-prometheus.carbonara-monitoring
  PUSHGATEWAYENDPOINT: prometheus-pushgateway.carbonara-monitoring
  IDENTIFYAPIURL: https://5iwp5kybbk.execute-api.us-east-2.amazonaws.com/demo/identify
